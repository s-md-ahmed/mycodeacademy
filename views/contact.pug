extends base.pug
block scripts 
    script(src="/static/main.js") 
block style 
    style
        include ../static/style.css
        include ../static/styleContact.css
block content
    nav#navbar 
        ul 
            div#logo 
                img(src="https://res.cloudinary.com/practicaldev/image/fetch/s--Xv-VTYBg--/c_fill,f_auto,fl_progressive,h_320,q_auto,w_320/https://dev-to-uploads.s3.amazonaws.com/uploads/user/profile_image/735018/5237f9ab-7eab-4f4d-aad9-5ca491b55653.jpg", alt="")
                span
                    h4 CFA
            li #[a(href="/") Home]
            li #[a(href="/contact") Contact us]
    div.container
        h1 Contact us
        form(action="/contact",method="post",class="myForm")
            input(type="text",class="myinput",name="name",id="name",placeholder="Enter your name")
            input(type="phone",class="myinput",name="phone",id="phone",placeholder="Enter your phone number")
            input(type="email",class="myinput",name="email",id="email",placeholder="Enter your e-mail id")
            input(type="text",class="myinput",name="address",id="address",placeholder="Enter your address")
            input(type="text",class="myinput",name="desc",id="name",placeholder="Enter your concern") 
            button(class="btn")
